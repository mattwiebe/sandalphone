{
  "name": "sandalphone-vps-gateway",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "TypeScript VPS voice gateway for Sandalphone",
  "bin": {
    "sandalphone": "dist/cli.js",
    "levi": "dist/cli.js"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "check": "tsc --noEmit -p tsconfig.json",
    "test": "tsx --test src/__tests__/*.test.ts",
    "test:smoke": "tsx --test src/__tests__/smoke-http.test.ts",
    "test:quick": "npm run check && npm run test:smoke",
    "smoke:live": "node ./scripts/smoke-live.mjs",
    "deploy:preflight": "node ./scripts/deploy-preflight.mjs",
    "cli": "node dist/cli.js",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down"
  },
  "dependencies": {
    "@aws-sdk/client-polly": "^3.799.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}

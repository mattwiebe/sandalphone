#!/usr/bin/env bash
mkdir -p .direnv/bin

cat > .direnv/bin/python << 'EOF'
#!/usr/bin/env bash
echo "⚠️  Intercepted 'python' - using 'uv run python' instead" >&2
exec uv run python "$@"
EOF
chmod +x .direnv/bin/python

cat > .direnv/bin/python3 << 'EOF'
#!/usr/bin/env bash
echo "⚠️  Intercepted 'python3' - using 'uv run python' instead" >&2
exec uv run python "$@"
EOF
chmod +x .direnv/bin/python3

PATH_add .direnv/bin
echo "✓ direnv configured - Python commands will use 'uv run python'"

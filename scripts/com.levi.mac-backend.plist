<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.levi.mac-backend</string>

    <key>ProgramArguments</key>
    <array>
        <string>/opt/homebrew/bin/uv</string>
        <string>run</string>
        <string>--project</string>
        <string>/Users/matt/levi</string>
        <string>--extra</string>
        <string>mac</string>
        <string>python</string>
        <string>-u</string>
        <string>/Users/matt/levi/mac/src/main.py</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/matt/levi</string>

    <key>StandardOutPath</key>
    <string>/Users/matt/levi/logs/mac-backend.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/matt/levi/logs/mac-backend.error.log</string>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>

    <key>ThrottleInterval</key>
    <integer>10</integer>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin</string>
    </dict>
</dict>
</plist>

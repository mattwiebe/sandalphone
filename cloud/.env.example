# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram API Credentials (required for voice calls)
# Get these from https://my.telegram.org
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Mac Backend Configuration
MAC_WEBSOCKET_URL=ws://100.x.x.x:8000/ws/translate

# Optional: Allowed Telegram User IDs (comma-separated)
# Leave empty to allow all users (not recommended for production)
ALLOWED_USER_IDS=

# Voice Call Settings
VOICE_CALL_ENABLED=true
AUTO_JOIN_VOICE_CHATS=true
DEFAULT_SOURCE_LANG=es
DEFAULT_TARGET_LANG=en
VAD_AGGRESSIVENESS=2
SILENCE_DURATION_MS=500

# Logging
LOG_LEVEL=INFO
